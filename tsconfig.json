{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "root/*": ["./*"]
    },
    "types": ["node", "jest"]
  },
  "include": [
    "./src/**/*", 
    "global.d.ts",
    "jest.d.ts"
  ],
  "exclude": ["node_modules", "lib"]
}
